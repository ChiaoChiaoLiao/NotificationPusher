<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.chuchiao_liao.notificationpusher.MainActivity">

    <Button
        android:id="@+id/subscribeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subscribe"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/pushInviteNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Invite"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/pushCommentNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comment"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/pushAddedNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Added"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/pushNewDashboardNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NewDashboard"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/pushRemoveDashboardNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RemoveDashboard"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/pushRemoveMemberNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RemoveMember"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/pushTemplateUpdateNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TemplateUpdate"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/pushDataUpdateNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DataUpdate"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/pushAnnouncementNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Announcement"
        android:textAllCaps="false"/>
</LinearLayout>
